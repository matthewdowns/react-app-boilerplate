{
    "compilerOptions": {
      "target": "ES2020",
      "module": "commonjs",
      "jsx": "react",
      "declaration": false,
      "declarationMap": false,
      "sourceMap": false,
      "outDir": "./dist",
      "rootDir": "./src",
      "removeComments": true,
      "strict": true,
      "moduleResolution": "node",
      "baseUrl": "./",
      "paths": {
        "~components/*": ["./src/components/*"],
        "~config": ["./src/config.ts"],
        "~/*": ["./src/*"]
      },
      "esModuleInterop": true,
      "resolveJsonModule": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true
    },
    "include": [
      "./src/**/*"
    ],
    "exclude": [
      "node_modules",
      "./public/**/*"
    ]
  }